<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#123213"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hotel Name -->
            <TextView
                android:id="@+id/hotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Susesi Luxury Resort"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/address"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bus"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/hotelAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belek, İskele Mevki, 07450\nSerik/Antalya, Türkiye"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Contact -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/contact"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bus"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/hotelContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+90 242 277 11 61"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Button for Directions -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bus"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnDirections"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#123231"
                    android:text="CLICK HERE FOR DIRECTION"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>