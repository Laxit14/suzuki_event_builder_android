<?xml version="1.0" encoding="utf-8"?>
<resources>
   <style name="TopRightBottomRightRounded">
       <item name="cornerSizeTopRight">50dp</item>
       <item name="cornerSizeBottomRight">50dp</item>
       <item name="cornerSizeTopLeft">50dp</item>
       <item name="cornerSizeBottomLeft">50dp</item>
   </style>

    <style name="CustomCardShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_star_layer</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerSize">50%</item> <!-- Makes it perfectly circular -->
    </style>

    <style name="ImageRoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CircleImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>



</resources>